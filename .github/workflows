
name: Update File Tree JSON

on:
  push:
    branches:
      - main  # Trigger on changes to the main branch
  pull_request:
    branches:
      - main  # Optional: Trigger on pull requests to the main branch

jobs:
  update-file-tree:
    runs-on: ubuntu-latest

    steps:
    # Checkout the repository
    - name: Checkout repository
      uses: actions/checkout@v3

    # Generate the file tree JSON
    - name: Generate file tree JSON
      run: |
        mkdir -p .github/output
        git ls-tree -r HEAD --name-only | jq -R -s -c 'split("\n") | map(select(. != ""))' > .github/output/file_tree.json

    # Commit and push the changes
    - name: Commit and push changes
      run: |
        git config user.name "GitHub Actions Bot"
        git config user.email "<>"
        git add .github/output/file_tree.json
        git commit -m "Update file tree JSON [skip ci]" || echo "No changes to commit"
        git push
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
